{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
